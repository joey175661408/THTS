    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="330"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="{Binding StartOrPause}" Width="50" Height="30" Command="{Binding StartCommand}" IsEnabled="{Binding StartEnable}"/>
                <Label/>
                <Button Content="⬛" Width="50" Height="30" Command="{Binding StopCommand}" IsEnabled="{Binding StopEnable}"/>
                <Label/>
                <Button Content="保存" Width="50" Height="30" Command="{Binding SaveAndCloseCommand}" IsEnabled="{Binding SaveEnable}"/>
                <Label/>
                <Button Content="返回" Width="50" Height="30"  Command="{Binding ReturnCommand}"/>
            </StackPanel>
            <Label Grid.Row="2" Content="如需立即开始，可按【开始采样】按钮！" HorizontalAlignment="Center"/>
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="当前测试：" FontSize="18" Height="40" VerticalContentAlignment="Center"/>
                <Label Content="{Binding CurrentTemperature}" FontSize="18" Height="40" VerticalContentAlignment="Center"/>
            </StackPanel>
            <StackPanel Grid.Row="4" Orientation="Horizontal">
                <Controls:MetroProgressBar Value="{Binding BarValue}" IsIndeterminate="True"  Maximum="100" Minimum="0" Width="200" Height="20"/>
                <Label/>
                <Label Content="{Binding BarTime}" Width="100" HorizontalAlignment="Right"/>
            </StackPanel>
            <Border Grid.Row="0" Grid.RowSpan="5" BorderBrush="AliceBlue" BorderThickness="1"/>

            <Grid Grid.Row="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>

